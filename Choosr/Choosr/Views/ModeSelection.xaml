<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Choosr.Views.ModeSelection">
    <StackLayout BackgroundColor="#6C9BAB">
        <Image x:Name="fileImage" Aspect="AspectFit" HeightRequest="100" WidthRequest="120"/>
        <Button Text="Play as a Group"
                Clicked="GroupPlayButton"
                TextColor="Black"
                WidthRequest="175"
                BorderRadius="10"
                HorizontalOptions="Center"
                BackgroundColor="#BFE1E9"/>
        <Button Text="Play on your own"
                Clicked="SinglePlayButton"
                TextColor="Black"
                WidthRequest="175"
                HorizontalOptions="Center"
                BackgroundColor="#BFE1E9"/>
        <Button Text="Enter a Code"
                Clicked="EnterCodeButton"
                TextColor="Black"
                WidthRequest="100"
                HorizontalOptions="Center"
                BackgroundColor="#E2FAFF"
                HeightRequest="20"/>
    </StackLayout>
</ContentPage>
